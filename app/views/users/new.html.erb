<div id="clearance" class="sign-up text-center form-signin">
  <%= form_for @user do |form| %>
    <%= link_to image_tag("01_06_2017_airbnb_800x600.gif", class: "mb-4", alt: "Home Page", style: "width: 72px; height: 72px;"), root_path %>
    <% flash.each do |key, value| %>
      <div class="alert alert-danger">
        <strong><%= value %></strong>
        <br>
      </div>
    <% end %>
    <div class="text-field">
      <%= form.label :name, "Name", class: "sr-only" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="text-field">
      <%= form.label :username, "Username", class: "sr-only" %>
      <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
    </div>

    <div class="text-field">
      <%= form.label :email, "Email address", class: "sr-only" %>
      <%= form.text_field :email, type: 'email', class: "form-control", placeholder: "Email address" %>
    </div>

    <div class="password-field">
      <%= form.label :password, "Password", class: "sr-only" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="submit-field">
      <br>
      <%= form.submit :"Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <div class="other-links">
    <br>
    <% if Clearance.configuration.allow_sign_up? %>
      <%= button_to "Sign up with Google", "/auth/google_oauth2", method: :get, class: "btn btn-lg btn-primary btn-block"%>
    <% end %>
  </div>
</div>
