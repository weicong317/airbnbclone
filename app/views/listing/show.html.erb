<% list = Listing.find(params[:id]) %>
<p>Name of the room: <%= list.name %></p>
<p>Description of the room: <%= list.description %></p>
<p>Price: <%= list.price %></p>
<p>Location: <%= list.location %></p>
<p>Owner: <%= link_to "#{list.user.username}", "/#{list.user.username}" %></p>
<br>
<% if current_user.id === list.user.id %>
  <%= button_to "Edit", "/listing/#{params[:id]}/edit", method: :get %><br>
  <%= button_to "Delete", "/listing/#{params[:id]}", method: :delete %><br>
<% end %>